                <tree create="false" edit="false"> 
                    <field name="acc_code" />
                    <field name="profile_code" />
                    <field name="user_name" /> 
                    <field name="first_name" />
                    <field name="last_name" />
                    <field name="mobile" />
                    <field name="register_date" />
                    <field name="status" /> 
                </tree>
            </field>
        </record>

