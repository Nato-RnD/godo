<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_sm_wallet_tree">
            <field name="name">smart_customer.res_sm_wallet.tree</field>
            <field name="model">res.sm.wallet</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="wallet_code" />
                    <field name="name" />
                    <field name="account_id" />
                    <field name="currency_id" />
                    <field name="balance" /> 
                </tree>
            </field>
        </record>
 
        <record id="view_sm_wallet_search" model="ir.ui.view">
            <field name="name">smart_customer.res_sm_wallet.tree</field>
            <field name="model">res.sm.wallet</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Wallet's name" filter_domain="['|',  ('name', 'ilike', self), ('wallet_code', 'ilike', self)]" />
                    <field name="account_id" string="Smart ID" filter_domain="[ ('account_id', 'ilike', self)]" />  
                    <separator/>

                    <group expand="1" string="Group By">
                        <filter string="Smart ID" name="account_id" context="{'group_by':'account_id'}"/> 
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="res_sm_wallet_action_window">
            <field name="name">Wallets</field>
            <field name="res_model">res.sm.wallet</field>
            <field name="view_mode">tree,form</field>  
            <field name="search_view_id" ref="view_sm_wallet_search"/>
        </record>

        <!-- <record model="ir.actions.act_window.view" id="res_sm_wallet_action_window_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sm_wallet_form"/>
            <field name="act_window_id" ref="res_sm_wallet_action_window"/>
        </record> -->

        <record model="ir.actions.act_window.view" id="res_sm_wallet_action_window_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sm_wallet_tree"/>
            <field name="act_window_id" ref="res_sm_wallet_action_window"/>
        </record>

    </data>
</odoo>