<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.smart.customers</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="95"/> -->
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Customers - Service" string="Customers - Service" data-key="smart_customers">
                    <h2>gRPC Services</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <label for="service_name"/> 

                            </div>
                            <div class="o_setting_right_pane">
                                 <field name="service_name"/>  
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                              <label for="listen_port"/> 
                            </div>
                            <div class="o_setting_right_pane">
                                  <field name="listen_port"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                              <label for="state"/> 
                            </div>
                            <div class="o_setting_right_pane">
                                  <field name="state"/>
                            </div>
                        </div> 
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <button name="action_start" string="Bật" type="workflow" class="float-right" icon="fa-play" attrs="{'invisible': [('state', '=', 'running')]}"/>  
                            </div>
                            <div class="o_setting_right_pane">
                               <button name="action_stop" string="Tắt" type="workflow" class="float-right" icon="fa-stop" attrs="{'invisible': [('state', '=', 'stopped')]}"/>
                            </div>
                        </div>


  
                    </div> 
                </div>
            </xpath>
        </field>
    </record>

    <record id="grpc_service_configuration" model="ir.actions.act_window">
        <field name="name">gRPC Service Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'smart_customers'}</field>
    </record>
</odoo>
