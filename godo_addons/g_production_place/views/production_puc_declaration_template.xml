<?xml version="1.0" encoding="utf-8" ?>
<odoo> 
    <template id="portal_layout" name="Portal Layout">
        <t t-call="portal.frontend_layout">
            <t t-set="is_portal" t-value="True" /> 
            <div class="container pt-4">
                <div class="row mx-0">
                    <div class="col-3">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action active">
                                Cras justo odio
                            </a>
                            <a href="/tokhai-kythuat" class="list-group-item list-group-item-action">Dapibus ac facilisis in</a>
                            <a href="#" class="list-group-item list-group-item-action">Morbi leo risus</a>
                            <a href="#" class="list-group-item list-group-item-action">Porta ac consectetur ac</a>
                            <a href="#" class="list-group-item list-group-item-action disabled">Vestibulum at eros</a>
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="card">
                           <div class="card-body">
                                <t t-if="test">
                                    <table class="table table-hover table-responsive">
                                        <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Ten vung trong</th>
                                            <th scope="col">Dien tich</th>
                                            <th scope="col">Cay trong</th>
                                            <th scope="col">Thi truong</th>
                                            <th scope="col">San luong</th>
                                            <th scope="col">Trang thai</th> 
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="i" t-value="1"/>
                                            <t t-foreach="test" t-as="item">
                                                <tr>
                                                    <th scope="row"><t t-esc="i"/></th>
                                                    <td> <a t-attf-href="/my/tokhai-kythuat/detail/{{item.id}}" ><t t-esc="item.name" /></a></td>
                                                    <td><t t-esc="item.area" /></td>
                                                    <td><t t-esc="item.tree_id.name" /></td> 
                                                    <td><t t-esc="item.export_to.name" /></td>
                                                    <td><t t-esc="item.three_years_average_production" /></td>
                                                    <td><t t-esc="item.state" /></td>
                                                </tr>
                                                <t t-set="i" t-value="i+1"/> 
                                            
                                        </t> 
                                        
                                        </tbody>
                                    </table> 
                                </t>

                                <t t-if="detail">
                                    <t t-esc="detail.name" />
                    
                                    <t t-esc="detail.registered_owner_name" /> 
                                </t> 
                           </div> 
                        </div>
                    </div>
                </div> 

            </div> 
            
        </t>
    </template>

</odoo>
